<%- include('partials/header') %>
<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="images/login.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form action="/register" method="POST">

          <!-- Email input -->
          <div class="form-floating mb-4">
            <input type="email" id="registerEmail" name="username" class="form-control form-control-lg" placeholder="name@example.com">
            <label class="form-label" for="registerEmail">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-floating mb-4">
            <input type="password" id="registerPassword" name="password" class="form-control form-control-lg" placeholder="Password">
            <label class="form-label" for="registerPassword">Password</label>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block col-12 mb-4">Sign up</button>

          <p class="small mt-2 mb-0">Already registered? <a href="/login">Login</a></p>

        </form>
      </div>
    </div>
  </div>
</section>


