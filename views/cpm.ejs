<%- include('partials/logHeader', {user: user}) %>

<section class="exe-sec color2-sec">
  <h2 class="sec-head sec-head-logbar-pt">Critical Path Method: Exercise</h2>
  <div class="container-fluid">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Activity</th>
          <th scope="col">Duration</th>
          <th scope="col">Predecessors</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < params.n; i++) { %>
          <tr>
            <th scope="row"><%=i+1%></th>
            <td><%=params.N[i]%></td>
            <td><%=proj.D[i]%></td>
            <td><%=proj.pStr[i]%></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

<%
let myColor = "#32CD32"
function cpmCell(input, key){
  if ((input == "") || (typeof input === 'undefined')) {
    return "<td><span style='color: red;'> &#10006 &nbsp &nbsp</span>" + key + "</td>";
  } else if (input == key) {
    return "<td><span style='color: " + myColor + ";'>" + key + "</span></td>";
  } else {
    return "<td><span style='color: red;'><s>" + input + "</s>&nbsp &nbsp</span>" + key + "</td>";
  }
}
function cpsCell(input, key){
  if ((input == "") || (typeof input === 'undefined')) {
    return "<td colspan='3'><span style='color: red;'> &#10006 &nbsp &nbsp</span>" + key + "</td>";
  } else if (input == key) {
    return "<td colspan='3'><span style='color: " + myColor + ";'>" + key + "</span></td>";
  } else {
    return "<td colspan='3'><span style='color: red;'><s>" + input + "</s>&nbsp &nbsp</span>" + key + "</td>";
  }
}
function cpiCell(input){
  if ((input == "") || (typeof input === 'undefined')) {
    return "<td><span style='color: red;'> &#10006 &nbsp &nbsp</span>" + params.cpiOptions[params.cpiSol] + "</td>";
  } else if (input == params.cpiSol) {
    return "<td><span style='color: " + myColor + ";'>&#10004 &nbsp &nbsp" + params.cpiOptions[params.cpiSol] + "</span></td>";
  } else {
    return "<td><span style='color: red;'><s>" + params.cpiOptions[input] + "</s>&nbsp &nbsp</span>" + params.cpiOptions[params.cpiSol] + "</td>";
  }
}
function cp1Cell(){
  if (typeof sol.mcqCp1 == 'undefined') {
    return "<td><span style='color: red;'> &#10006</span></td>";
  }
  if (sol.mcqCp1 == null) {
    return "<td><span style='color: red;'> &#10006</span></td>";
  }
  let cpStr = "";
  let cpArr = [];
  for (var i = 0; i < sol.mcqCp1.length; i++) {
     if (typeof sol.mcqCp1[i] !== 'undefined') {
       cpArr.push(sol.mcqCp1[i]);
       if (cpStr === "") {
         cpStr = cpStr + params.N[sol.mcqCp1[i]];
       } else {
         cpStr = cpStr + "-" + params.N[sol.mcqCp1[i]];
       }
     }
  }
  if (cpStr === "") {
    return "<td><span style='color: red;'> &#10006</span></td>";
  } else {
    let cpExist = false;
    for (var i = 0; i < proj.cpNr; i++) {
      if (cpArr.toString() === proj.cps[i].toString()) {
        cpExist = true;
        break;
      }
    }
    if (cpExist) {
      return "<td><span style='color: " + myColor + ";'>&#10004 &nbsp &nbsp" + cpStr + "</span></td>";
    } else {
      return "<td><span style='color: red;'><s>" + cpStr + "</s>&nbsp &nbsp</span></td>";
    }
  }
}
function cpaCell(input){
  if (typeof sol.mcqCa == 'undefined') {
    return "<td><span style='color: red;'> &#10006</span></td>";
  }
  if (sol.mcqCa == null) {
    return "<td><span style='color: red;'> &#10006</span></td>";
  }
  if ((!sol.mcqCa.includes(input.toString())) && (!proj.caBool[input])) {
    return "<td><span style='color: " + myColor + ";'>No</span></td>";
  } else if (sol.mcqCa.includes(input.toString()) && (proj.caBool[input])) {
    return "<td><span style='color: " + myColor + ";'>Yes</span></td>";
  } else if (sol.mcqCa.includes(input.toString()) && (!proj.caBool[input])) {
    return "<td><span style='color: red;'><s>Yes</s></span></td>";
  } else if ((!sol.mcqCa.includes(input.toString())) && (proj.caBool[input])) {
    return "<td><span style='color: red;'><s>No</s></span></td>";
  } else {
    return "Error!"
  }
}
%>

<section class="exe-sec color3-sec">
  <h2 class="sec-head">CPM Solution</h2>
  <div class="container-fluid">

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Activity</th>
          <th scope="col">EST</th>
          <th scope="col">EFT</th>
          <th scope="col">LST</th>
          <th scope="col">LFT</th>
          <th scope="col">Floats</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < params.n; i++) { %>
          <tr>
            <th scope="row"><%=i+1%></th>
            <td><%=params.N[i]%></td>
            <%- cpmCell(sol.est[i], proj.es[i]);%>
            <%- cpmCell(sol.eft[i], proj.es[i] + proj.D[i]);%>
            <%- cpmCell(sol.lst[i], proj.lf[i] - proj.D[i]);%>
            <%- cpmCell(sol.lft[i], proj.lf[i]);%>
            <%- cpmCell(sol.f[i], proj.lf[i] - proj.D[i] - proj.es[i]);%>
          </tr>
        <% } %>
      </tbody>
    </table>

    <table class="table table-hover exe-mt">
      <thead>
        <tr>
          <th scope="col">Q2. Project Duration (=max(EFT) or max(LFT))</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%- cpmCell(sol.duration, proj.makespan);%>
        </tr>
      </tbody>
    </table>

    <table class="table table-hover exe-mt">
      <thead>
        <tr>
          <th scope="col">Q3. How to identify a critical path</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%- cpiCell(sol.mcqCpi);%>
        </tr>
      </tbody>
    </table>

    <table class="table table-hover exe-mt">
      <thead>
        <tr>
          <th scope="col" colspan="3">Q4. The number of critical paths</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%- cpsCell(sol.mcqCps, proj.cpNr);%>
        </tr>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Critical Path</th>
          <th scope="col">Cumulative Duration</th>
        </tr>
        <% for (var i = 0; i < proj.cpNr; i++) { %>
          <tr>
            <th scope="row"><%=i+1%></th>
            <td><%=proj.cpStr[i]%></td>
            <td><%=proj.makespan%></td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <table class="table table-hover exe-mt">
      <thead>
        <tr>
          <th scope="col">Q5. A critical path</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <%- cp1Cell();%>
        </tr>
      </tbody>
    </table>

    <table class="table table-hover exe-mt">
      <thead>
        <tr>
          <th scope="col" colspan="<%=params.n + 1%>">Q6. All critical activities</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="col" style="text-align: right;">Activity:</th>
          <% for (var i = 0; i < params.n; i++) {%>
            <td><%=params.N[i]%></td>
          <%}%>
        </tr>
        <tr>
          <th scope="col" style="text-align: right;">Critical:</th>
          <% for (var i = 0; i < params.n; i++) {%>
            <%- cpaCell(i)%>
          <%}%>
        </tr>
      </tbody>
    </table>

  </div>
</section>

<div class="md:flex flex-col md:flex-row md:min-h-screen w-full max-w-screen-xl mx-auto">
